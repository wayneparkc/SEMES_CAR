<Window x:Class="CarManufactureApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="자동차 제조 테스트" Height="700" Width="500">
    <Window.Resources>
        <!-- 스타일 추가 -->
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Button Name="ResetButton" Content="전체 초기화" Width="120" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" FontSize="14" Click="ResetButton_Click"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- 차량 타입 선택 -->
            <TextBlock Text="Choose Car Type:" FontSize="16" FontWeight="Bold" Margin="10"/>
            <RadioButton Name="SedanRadioButton" Content="Sedan" GroupName="CarType" />
            <RadioButton Name="SUVRadioButton" Content="SUV" GroupName="CarType" />
            <RadioButton Name="TruckRadioButton" Content="Truck" GroupName="CarType" />

            <!-- 엔진 타입 선택 -->
            <TextBlock Text="Choose Engine:" FontSize="16" FontWeight="Bold" Margin="10"/>
            <RadioButton Name="GMRadioButton" Content="GM" GroupName="Engine" />
            <RadioButton Name="ToyotaRadioButton" Content="Toyota" GroupName="Engine" />
            <RadioButton Name="WiaRadioButton" Content="WIA" GroupName="Engine" />

            <!-- 브레이크 타입 선택 -->
            <TextBlock Text="Choose Brake:" FontSize="16" FontWeight="Bold" Margin="10"/>
            <RadioButton Name="MandoRadioButton" Content="MANDO" GroupName="Brake" />
            <RadioButton Name="ContinentalRadioButton" Content="Continental" GroupName="Brake" />
            <RadioButton Name="BoschRadioButton" Content="Bosch" GroupName="Brake" />

            <!-- 스티어링 타입 선택 -->
            <TextBlock Text="Choose Steering:" FontSize="16" FontWeight="Bold" Margin="10"/>
            <RadioButton Name="BoschSteeringRadioButton" Content="Bosch" GroupName="Steering" />
            <RadioButton Name="MobisSteeringRadioButton" Content="Mobis" GroupName="Steering" />

            <!-- 버튼 영역 -->
            <Button Name="SubmitButton" Width="100" Height="30" Content="Submit" Margin="10" FontSize="16"/>

            <!-- 결과 표시 -->
            <TextBlock Name="ResultTextBlock" Margin="10" FontWeight="Bold" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
