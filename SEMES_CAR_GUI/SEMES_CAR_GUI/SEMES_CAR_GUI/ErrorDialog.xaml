<Window x:Class="SEMES_CAR_GUI.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="200" Width="300" WindowStyle="ToolWindow"
        ResizeMode="NoResize" Background="#F9F9F9">

    <Grid Margin="20">
        <Border BorderBrush="#FFB6B6B6" BorderThickness="1" CornerRadius="10" Background="White">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" Margin="10">
                <!-- 에러 메시지를 표시하는 텍스트 블록 -->
                <TextBlock Name="ErrorMessageTextBlock" FontSize="8" FontWeight="Bold" Foreground="#FF5555" 
                           TextAlignment="Center" TextWrapping="Wrap" Margin="10"/>
                <!-- OK 버튼 -->
                <Button Content="OK" Width="100" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center" 
                        Click="OkButton_Click" Background="#FF5C5C" Foreground="White" BorderBrush="#FF3D3D" 
                        BorderThickness="1" Margin="10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
